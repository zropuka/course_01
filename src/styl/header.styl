@import '_variables.styl'
@import '_mixins.styl'

.excel__header
  position absolute
  top 0
  left 0
  right 0
  height $header-height
  padding 8px 4px 0
  display flex
  justify-content space-between

  .input
    margin 0
    padding 2px 7px
    color #000
    border 2px solid transparent
    border-radius 2px
    height 20px
    font-size 18px
    line-height 22
    outline none
    min-width 1px
    
    &:hover
      border 2px solid $border-color

    &:focus
      border 2px solid #1a73ef


  .button
    button(red)
